@using Permit_to_work.ViewModel
@model IEnumerable<PermitDashboardVM>
@{
    ViewData["Title"] = "PermitDashboard";
}



<!DOCTYPE html>
<html>
<head>
    <title>Permit Dashboard</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg,#eef2f3,#dfe9f3);
        }

        .card {
            animation: slideUp .6s ease;
            border-radius: 15px;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        table tbody tr {
            transition: all .3s;
        }

            table tbody tr:hover {
                background: #f1f8ff;
                transform: scale(1.01);
            }

        .badge {
            font-size: 0.85rem;
        }
    </style>
</head>

<body>
    <div class="row mb-1">
        <div class="col-md-4">
            <input type="text" id="searchInput" class="form-control"
                   placeholder="Search Permit Type, Unit, Location, Status...">
        </div>
    </div>
    <div class="container mt-5">
        <div class="card shadow-lg">
          
            <div class="card-header bg-dark text-white text-center fs-4">
                Permit To Work – Dashboard
            </div>
          
            <div class="card-body">
                <table class="table table-bordered align-middle text-center" id="permitTable">
                    <thead class="table-secondary">
                        <tr>
                            <th>Permit Type</th>
                            <th>Unit</th>
                            <th>Location</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.PermitType</td>
                                <td>@item.Unit</td>
                                <td>@item.Location</td>
                                <td>@item.StartDate.ToString("dd-MM-yyyy")</td>
                                <td>@item.EndDate.ToString("dd-MM-yyyy")</td>
                                <td>
                                    <span class="badge bg-success">@item.Status</span>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary"
                                       href="/@item.PermitType.Replace(" ", "")/Edit/@item.PermitDashBoardId">
                                        ✏ Edit
                                    </a>

                                    <a class="btn btn-sm btn-warning"
                                       href="/Dashboard/Extend?type=@item.PermitType&id=@item.PermitDashBoardId">
                                        ⏱ Extend
                                    </a>

                                    <a class="btn btn-sm btn-danger"
                                       href="/Dashboard/Delete?type=@item.PermitType&id=@item.PermitDashBoardId"
                                       onclick="return confirm('Delete this permit?');">
                                        🗑 Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="extendModal">
        <div class="modal-dialog">
            <form method="post" action="/Dashboard/ExtendPermit">
                <div class="modal-content">
                    <div class="modal-header bg-warning">
                        <h5>Extend Permit</h5>
                    </div>

                    <div class="modal-body">
                        <input type="hidden" id="PermitId" name="PermitId" />
                        <label>New End Date</label>
                        <input type="date" class="form-control" name="NewEndDate" required />
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-success">Extend</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
             $(document).ready(function () {

            $("#searchInput").on("keyup", function () {

                var value = $(this).val().toLowerCase();

                $("#permitTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });

            });

        });
        function setPermitId(id){
            document.getElementById("PermitId").value = id;
        }
    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
