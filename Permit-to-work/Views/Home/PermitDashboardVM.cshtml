@model IEnumerable<PermitDashboardVM>
@{
    ViewData["Title"] = "PermitDashboardVM";
}



<!DOCTYPE html>
<html>
<head>
    <title>Permit Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg,#eef2f3,#dfe9f3);
        }

        .card {
            animation: slideUp .6s ease;
            border-radius: 15px;
        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        table tbody tr {
            transition: all .3s;
        }

            table tbody tr:hover {
                background: #f1f8ff;
                transform: scale(1.01);
            }

        .badge {
            font-size: 0.85rem;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-dark text-white text-center fs-4">
                Permit To Work – Dashboard
            </div>

            <div class="card-body">
                <table class="table table-bordered align-middle text-center">
                    <thead class="table-secondary">
                        <tr>
                            <th>Permit Type</th>
                            <th>Unit</th>
                            <th>Location</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.PermitType</td>
                                <td>@item.Unit</td>
                                <td>@item.Location</td>
                                <td>@item.StartDate.ToString("dd-MM-yyyy")</td>
                                <td>@item.EndDate.ToString("dd-MM-yyyy")</td>
                                <td>
                                    <span class="badge bg-success">@item.Status</span>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary"
                                       href="/@item.PermitType.Replace(" ", "")/Edit/@item.PermitId">
                                        ✏ Edit
                                    </a>

                                    <a class="btn btn-sm btn-warning"
                                       href="/Dashboard/Extend?type=@item.PermitType&id=@item.PermitId">
                                        ⏱ Extend
                                    </a>

                                    <a class="btn btn-sm btn-danger"
                                       href="/Dashboard/Delete?type=@item.PermitType&id=@item.PermitId"
                                       onclick="return confirm('Delete this permit?');">
                                        🗑 Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
