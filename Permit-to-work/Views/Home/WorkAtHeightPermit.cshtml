@model WorkAtHeightPermit
@{
    ViewData["Title"] = "WorkAtHeightPermit";

}

<!DOCTYPE html>
<html>
<head>
    <title>Work At Height Permit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f4f9ff;
        }

        .card {
            animation: slideUp .6s ease;
        }
        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .section-title {
            background: #0d6efd;
            color: #fff;
            padding: 8px 12px;
            font-weight: bold;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <form method="post" class="container my-4">

        <div class="card">
            <div class="card-header text-center fw-bold">
                WORK AT HEIGHT PERMIT
            </div>

            <div class="card-body">

                <section>
                    <div class="section-title">Basic Details</div>
                    <div class="row">
                        <div class="col-md-3">@Html.TextBoxFor(m => m.Unit, new { @class = "form-control", placeholder = "Unit" })</div>
                        <div class="col-md-3">@Html.TextBoxFor(m => m.ContractorTeam, new { @class = "form-control", placeholder = "Contractor" })</div>
                        <div class="col-md-3">@Html.TextBoxFor(m => m.Location, new { @class = "form-control", placeholder = "Location" })</div>
                        <div class="col-md-3">@Html.TextBoxFor(m => m.NoOfWorkmen, new { @class = "form-control", placeholder = "No of Workmen" })</div>
                    </div>
                </section>

                <section class="mt-3">
                    <div class="section-title">Date & Time</div>
                    <div class="row">
                        <div class="col-md-3">@Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })</div>
                        <div class="col-md-3">@Html.TextBoxFor(m => m.StartTime, new { type = "time", @class = "form-control" })</div>
                        <div class="col-md-3">@Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })</div>
                        <div class="col-md-3">@Html.TextBoxFor(m => m.EndTime, new { type = "time", @class = "form-control" })</div>
                    </div>
                </section>

                <section class="mt-3">
                    <div class="section-title">Work Type</div>
                    <div class="row">
                        <div class="col">@Html.CheckBoxFor(m => m.Scaffolding) Scaffolding</div>
                        <div class="col">@Html.CheckBoxFor(m => m.Ladder) Ladder</div>
                        <div class="col">@Html.CheckBoxFor(m => m.AerialLift) Aerial Lift</div>
                        <div class="col">@Html.CheckBoxFor(m => m.RoofWork) Roof Work</div>
                    </div>
                </section>

                <section class="mt-3">
                    <div class="section-title">Work Description</div>
                    @Html.TextAreaFor(m => m.WorkDescription, 3, 100, new { @class = "form-control" })
                </section>

                <section class="mt-3">
                    <div class="section-title">PPE Required</div>
                    <div class="row">
                        <div class="col">@Html.CheckBoxFor(m => m.PPEHelmet) Helmet</div>
                        <div class="col">@Html.CheckBoxFor(m => m.PPEHelmetChinStrap) Chin Strap</div>
                        <div class="col">@Html.CheckBoxFor(m => m.PPEShoes) Safety Shoes</div>
                        <div class="col">@Html.CheckBoxFor(m => m.PPEGloves) Gloves</div>
                    </div>
                </section>

                <section class="mt-3">
                    <div class="section-title">Authorization</div>
                    <div class="row">
                        <div class="col-md-6">@Html.TextBoxFor(m => m.ReceiverName, new { @class = "form-control", placeholder = "Receiver Name" })</div>
                        <div class="col-md-6">@Html.TextBoxFor(m => m.IssuerName, new { @class = "form-control", placeholder = "Issuer Name" })</div>
                    </div>
                </section>

                <div class="text-center mt-4">
                    <button class="btn btn-success px-5">Submit Permit</button>
                </div>

            </div>
        </div>

    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
